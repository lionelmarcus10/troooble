version: "3.9"
services:
  backend:
    build:
      context: .
      dockerfile: Dockerfile.backend
    ports:
      - "{{ backend_port }}:{{ backend_port }}"
    environment:
      - FLASK_RUN_PORT={{ backend_port }}

  frontend:
    build:
      context: .
      dockerfile: Dockerfile.frontend
    ports:
      - "{{ frontend_port }}:3000"
    depends_on:
      - backend
