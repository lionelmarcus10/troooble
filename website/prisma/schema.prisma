generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Roadmap {
  id          String   @id @default(cuid()) // or you can keep manual id if preferred
  slug        String   @unique // maps your original `id` field (like "network-starter")
  title       String
  description String
  icon        String   // changed from enum to string
  modules     Int
  topics      Topic[]
}

model Topic {
  id        Int      @id @default(autoincrement())
  content   String
  roadmapId String
  roadmap   Roadmap  @relation(fields: [roadmapId], references: [id])
}


// New model for newsletter subscribers
model NewsletterSubscriber {
  id            String    @id @default(cuid())
  email         String    @unique
  isVerified    Boolean   @default(false)
  subscribedAt  DateTime  @default(now())
  unsubscribedAt DateTime? // null means still subscribed
  userId        String?   // Optional relation to a user if they exist
  //user         User?     @relation(fields: [userId], references: [id])
}

// model for labels
model Label {
  id         Int                @id @default(autoincrement())
  name       String             @unique
  color      String
  challenges ChallengeLabel[]
}

// model for challenges
model Challenge {
  id          Int                @id @default(autoincrement())
  title       String
  description String
  difficulty  String             // e.g., "Easy", "Medium", "Hard"
  labels      ChallengeLabel[]
}

// Junction table for many-to-many relationship
model ChallengeLabel {
  challengeId Int
  labelId     Int
  challenge   Challenge @relation(fields: [challengeId], references: [id])
  label       Label     @relation(fields: [labelId], references: [id])

  @@id([challengeId, labelId])
}


model favoriteChallenge {
  id          Int      @id @default(autoincrement())
  userId      String
  challengeId Int
  addedAt     DateTime @default(now())
}

model favoriteRoadmap {
  id        Int      @id @default(autoincrement())
  userId    String
  roadmapId String
  addedAt   DateTime @default(now())
}

// User model to track subscription and user data
model User {
  id            String         @id @default(cuid())
  email         String         @unique
  supabaseId    String         @unique // Link to Supabase auth user
  fullName      String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  subscriptions Subscription[]
  polarCustomerId String?      @unique
}

// Subscription model to track Polar subscriptions
model Subscription {
  id                   String    @id @default(cuid())
  userId               String
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Polar-specific fields
  polarSubscriptionId  String    @unique
  polarCustomerId      String
  polarProductId       String
  polarPriceId         String?

  // Subscription status
  status               String    // active, canceled, past_due, unpaid, incomplete, incomplete_expired, trialing

  // Subscription period
  currentPeriodStart   DateTime
  currentPeriodEnd     DateTime
  cancelAtPeriodEnd    Boolean   @default(false)
  canceledAt           DateTime?

  // Metadata
  metadata             Json?

  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  @@index([userId])
  @@index([status])
  @@index([polarCustomerId])
}

// Order model to track Polar orders
model Order {
  id              String   @id @default(cuid())
  userId          String?
  polarOrderId    String   @unique
  polarCustomerId String?
  amount          Int      // Amount in cents
  currency        String   @default("usd")
  status          String   // pending, succeeded, failed
  productId       String
  metadata        Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([status])
}
